{
  "name": "@uni-face/typescript-package-starter",
  "version": "0.0.1",
  "description": "Please write a description.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore .",
    "fixlint": "eslint --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore . --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "uni-face.co.,ltd",
  "license": "ISC",
  "files": [
    "dist",
    "README.md",
    "CONTRIBUTING.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uni-face/typescript-package-starter.git"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/async-lock": "^1.3.0",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "post-npm-install": "^2.0.0",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "post-npm-install",
      "post-rebase": "post-npm-install",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "!(sw.|workbox)*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
